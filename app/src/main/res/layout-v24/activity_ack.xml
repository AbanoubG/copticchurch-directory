<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/acktext"
            android:id="@+id/textView3"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/acknowledgements"
            android:id="@+id/textView4"
            android:textColor="#2854a1"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="33sp"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/acktext1"
            android:id="@+id/textView5"
            android:textSize="17sp"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView4"
            android:forceHasOverlappingRendering="false">

                <ImageView
                    android:layout_width="163dp"
                    android:layout_height="90dp"
                    android:id="@+id/imageView3"
                    android:layout_gravity="center"
                    android:src="@drawable/cropped_diocese_logo"
                    android:background="@null"
                    android:contentDescription="@string/lacopts" />

                <ImageView
                    android:layout_width="163dp"
                    android:layout_height="90dp"
                    android:id="@+id/imageView4"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/cross5"
                    android:background="@null"
                    android:contentDescription="@string/suscopts" />

                <ImageView
                    android:layout_width="163dp"
                    android:layout_height="90dp"
                    android:id="@+id/imageView5"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/nyne_logo_final_w_map"
                    android:background="@null"
                    android:contentDescription="@string/nynecopts" />
        </FrameLayout>

</RelativeLayout>