<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/acknowledgements"
            android:id="@+id/textView7"
            android:textColor="#2854a1"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="33sp"
            android:layout_marginTop="51dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/acktext"
            android:id="@+id/textView8"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/acktext1"
            android:id="@+id/textView6"
            android:textSize="17sp"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/textView8"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <ImageView
            android:layout_width="163dp"
            android:layout_height="90dp"
            android:id="@+id/imageView2"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/cross5"
            android:background="@null"
            android:contentDescription="@string/suscopts"
            android:layout_alignTop="@+id/imageView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="163dp"
            android:layout_height="90dp"
            android:id="@+id/imageView6"
            android:layout_gravity="center"
            android:src="@drawable/cropped_diocese_logo"
            android:background="@null"
            android:contentDescription="@string/lacopts"
            android:layout_alignTop="@+id/imageView7"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="163dp"
            android:layout_height="90dp"
            android:id="@+id/imageView7"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/nyne_logo_final_w_map"
            android:background="@null"
            android:contentDescription="@string/nynecopts"
            android:layout_below="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp" />

</RelativeLayout>